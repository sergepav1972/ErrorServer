			// Удаление временного файла
			УдалитьФайлы(Временныйфайл);
			УдалитьФайлы(ВременнаяПапка);
		Исключение
			Сообщить("Ошибка записи данных в файл: " + ОписаниеОшибки());
		КонецПопытки;
	Иначе
